<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blackish"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/itemImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/laptop1"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROG ASUS"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/itemImage"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:textColor="@color/whiteish" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1,040"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/itemImage"
        android:layout_marginStart="16dp"
        android:layout_below="@id/itemName"
        android:textColor="@color/whiteish" />

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Our premium devices elevate gaming experiences with best-in-class displays, top tier graphics, and innovative cooling solutions that take performance to new heights."
        android:textSize="14sp"
        android:layout_toEndOf="@id/itemImage"
        android:layout_marginStart="16dp"
        android:layout_below="@id/itemPrice"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/whiteish" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/itemDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnCartBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUY"
            android:layout_marginStart="50dp"
            android:backgroundTint="#000000"
            android:textColor="@color/whiteish"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnAddCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:text="ADD TO CART"
            android:layout_marginStart="15dp"
            android:textColor="@color/whiteish" />
    </LinearLayout>

</RelativeLayout>
